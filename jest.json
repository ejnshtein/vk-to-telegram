{
  "testRegex": [
    "(/__tests__/.*|(\\.|/))\\.[jt]sx?$"
  ],
  "testEnvironment": "node",
  "preset": "ts-jest",
  "setupFilesAfterEnv": [
    "./jest/jest.setup.ts"
  ],
  "globals": {
    "ts-jest": {
      "isolatedModules": true
    }
  },
  "collectCoverage":true,
  "collectCoverageFrom": [
    "**/*.{ts,js}"
  ],
  "coveragePathIgnorePatterns": [
    "node_modules",
    "__test__",
    "jest",
    "dist",
    "coverage",
    "docs",
    "types",
    "src/lib"
  ]
}