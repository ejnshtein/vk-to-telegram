{
  "name": "vk-to-telegram",
  "version": "1.0.0",
  "description": "Vk to telegram forwarder",
  "main": "./dist/index.js",
  "types": "./types/index.d.ts",
  "repository": "github:ejnshtein/vk-to-telegram",
  "author": "ejnshtein",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "lint": "eslint ./src --ignore-pattern *.test.*",
    "lint:fix": "eslint ./src --ignore-pattern *.test.* --fix",
    "test": "jest --config jest.json",
    "pretest": "npm run build",
    "pb": "npm run build && np",
    "build:docs": "typedoc",
    "deploy": "npm run build && npm run build:docs && gh-pages -t -d docs -b gh-pages",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=12"
  },
  "keywords": [
    "callback api",
    "vk",
    "telegram",
    "telegraf",
    "bot api",
    "telegram bot api",
    "callback api",
    "express"
  ],
  "private": false,
  "dependencies": {
    "bytes": "^3.1.0",
    "html-entities": "^2.3.2",
    "smol-request": "^2.1.1",
    "telegraf": "^4.4.2",
    "vk-io": "^4.4.0"
  },
  "devDependencies": {
    "@types/eslint": "^7.28.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "body-parser": "^1.19.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "express": "^4.17.1",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.2",
    "jest": "^27.2.5",
    "joi": "^17.4.2",
    "np": "^7.5.0",
    "prettier": "^2.4.1",
    "standard": "^16.0.4",
    "ts-jest": "^27.0.7",
    "typedoc": "^0.19.2",
    "typedoc-plugin-nojekyll": "^1.0.1",
    "typedoc-plugin-sourcefile-url": "^1.0.6",
    "typescript": "^4.4.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "arrowParens": "always",
    "trailingComma": "none"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "dist/*"
    ],
    "env": {
      "node": true
    },
    "extends": [
      "standard",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "camelcase": "warn",
      "@typescript-eslint/no-unused-vars": "warn",
      "no-prototype-builtins": "off",
      "@typescript-eslint/no-var-requires": "warn"
    }
  },
  "jest": {
    "testRegex": [
      "(/__tests__/.*|(\\.|/))\\.[jt]sx?$"
    ],
    "testEnvironment": "node",
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "./jest/jest.setup.ts"
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,js}"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "__test__",
      "jest",
      "dist",
      "coverage",
      "docs",
      "types",
      "src/lib"
    ]
  }
}
